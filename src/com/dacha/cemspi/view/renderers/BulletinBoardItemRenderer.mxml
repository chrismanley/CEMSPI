<?xml version="1.0" encoding="utf-8"?>
<view:GrowCanvas xmlns:mx="http://www.adobe.com/2006/mxml"  xmlns:view="com.dacha.cemspi.view.components.*" height="100%" horizontalScrollPolicy="off" verticalScrollPolicy="off" width="100%" >





	<mx:VBox width="100%">

	<mx:Text id="txtTitle" text="{data.title}" fontStyle="bold" width="100%" fontSize="15" x="0" />
	<mx:Text id="txtSubtitle" text="{data.subtitle}" fontStyle="italic" width="100%" x="0" />
	<mx:Text id="txtContent" text="{data.content}" width="100%" x="0" paddingLeft="5" paddingRight="10"/>
	
	<mx:HBox x="0" width="100%">
		<mx:Image source="com/dacha/cemspi/view/assets/icons/png/16x16/text_page.png" id="btnDetails" buttonMode="true" width="16" height="16" toolTip="Details" />
		<mx:Image source="com/dacha/cemspi/view/assets/icons/png/16x16/comment.png" id="btnEdit" width="16" height="16" buttonMode="true"  toolTip="Edit"/>
		<mx:Image source="com/dacha/cemspi/view/assets/icons/png/16x16/delete.png" buttonMode="true" id="btnDelete" height="16" width="16" toolTip="Delete" />		
	</mx:HBox>
	
	<mx:HRule width="100%"/>
	</mx:VBox>
</view:GrowCanvas>
